<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.franmelado.lapses"
    android:versionCode="3"
    android:versionName="2" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />
	
	<supports-screens
        android:largeScreens="true"
		android:xlargeScreens="true" />
    
    <!-- Needed in order to go to links in Info activity -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Needed in order to get the location based on the telephony network - in v2 -->
	<!-- <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> -->

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LapsesTheme" >
        <activity
            android:name=".LapsesActivity"
            android:label="@string/title_activity_lapses" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
