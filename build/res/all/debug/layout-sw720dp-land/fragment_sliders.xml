<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliders"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    android:orientation="vertical"
	android:background="#000000">

    <LinearLayout
        android:id="@+id/ShootingSession"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/FontTitle"
			android:id="@+id/tvShootingSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/shootingsession" />

        <LinearLayout
            android:id="@+id/llSSDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" >

            <TextView
                style="@style/FontLabel"
				android:id="@+id/tvSSDurationT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/duration" />

            <TextView
                style="@style/FontValue"
				android:id="@+id/tvSSDurationV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sbSSDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="7199" />

        <LinearLayout
            android:id="@+id/llSSInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
			android:layout_marginBottom="@dimen/margin_small" >

            <TextView
                style="@style/FontLabel"
				android:id="@+id/tvSSIntervalT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/interval" />

            <TextView
				style="@style/FontValue"
                android:id="@+id/tvSSIntervalV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sbSSInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="59" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/FinalMovie"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/FontTitle"
			android:id="@+id/tvFinalMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalmovie" />

        <LinearLayout
            android:id="@+id/llFMDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
			android:layout_marginBottom="@dimen/margin_small" >

            <TextView
                style="@style/FontLabel"
				android:id="@+id/tvFMDurationT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/duration" />

            <TextView
				style="@style/FontValue"
                android:id="@+id/tvFMDurationV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sbFMDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="239" />

        <LinearLayout
            android:id="@+id/llFMfps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_small"
			android:layout_marginBottom="@dimen/margin_small" >

            <TextView
                style="@style/FontLabel"
				android:id="@+id/tvFMfpsT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fps" />

            <TextView
				style="@style/FontValue"
                android:id="@+id/tvFMfpsV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sbFMfps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="29" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/NumPic"
		android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/FontValue"
			android:id="@+id/tvNumpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pictotal" />
    </LinearLayout>

</LinearLayout>
