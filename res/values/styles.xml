<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Font styles: Overwrite styles in 'values' to make use
	of the Roboto variations 'light' and 'condensed' -->

	<style name="FontTitle">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textSize">32sp</item>
		<item name="android:textColor">#FFC0C0C0</item> <!-- 25% grey, 100% opacity -->
		<item name="android:textStyle">italic</item>
		<item name="android:gravity">center</item> -->
	</style>

	<style name="FontLabel">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#FF808080</item> <!-- 50% grey, 100% opacity -->
		<item name="android:gravity">left</item> -->
	</style>

	<style name="FontValue">
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#FFFFFFFF</item> <!-- White, 100% opacity -->
